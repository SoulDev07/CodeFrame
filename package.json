{
  "name": "codeframe",
  "displayName": "CodeFrame",
  "description": "ðŸ“· Take beautiful screenshots of your code with CodeFrame!",
  "version": "1.3.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/SoulDev07/CodeFrame"
  },
  "publisher": "SoulDev07",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "keywords": [
    "screenshot",
    "snippet",
    "snap",
    "clipboard",
    "share",
    "carbon",
    "codeframe",
    "codesnap"
  ],
  "categories": [
    "Other"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeframe.start",
        "title": "CodeFrame"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeframe.start"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CodeFrame",
      "properties": {
        "codeframe.action.shutterAction": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "save",
            "copy"
          ],
          "default": "save",
          "description": "The behavior of the shutter button"
        },
        "codeframe.action.target": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "container",
            "window"
          ],
          "default": "container",
          "description": "Take the shot with or without the container"
        },
        "codeframe.background.backgroundColor": {
          "scope": "resource",
          "type": "string",
          "default": "#abb8c3",
          "description": "The background color of the snippet's container"
        },
        "codeframe.background.externalCssPath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to an external CSS file to apply to #snippet-container (used when useExternalCss is true)"
        },
        "codeframe.background.transparentBackground": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Use a transparent background when taking the screenshot"
        },
        "codeframe.background.useExternalCss": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "If true, use an external CSS file to style the snippet container instead of the background color setting"
        },
        "codeframe.code.realLineNumbers": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Start from the selection's line number instead of 1"
        },
        "codeframe.code.showLineNumbers": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Display line numbers"
        },
        "codeframe.container.boxShadow": {
          "scope": "resource",
          "type": "string",
          "default": "rgba(0, 0, 0, 0.55) 0px 20px 68px",
          "description": "The CSS box-shadow for the snippet"
        },
        "codeframe.container.containerPadding": {
          "scope": "resource",
          "type": "string",
          "default": "3em",
          "description": "The padding for the snippet's container"
        },
        "codeframe.container.roundedCorners": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Use rounded corners for the window"
        },
        "codeframe.container.showWindowControls": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Display MacOS style window controls"
        },
        "codeframe.container.showWindowTitle": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Display window title with open folder / file name"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,md,json,css,prettierrc,eslintrc,html}\"",
    "check:format": "prettier --check \"**/*.{js,jsx,md,json,css,prettierrc,eslintrc,html}\"",
    "check": "npm run lint && npm run check:format"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "@types/vscode": "^1.103.0",
    "@types/glob": "^9.0.0",
    "@types/node": "^24.3.0",
    "glob": "^11.0.3"
  },
  "dependencies": {
    "dom-to-image-even-more": "^1.0.4"
  }
}
